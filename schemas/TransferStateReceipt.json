{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "TransferStateReceipt",
  "description": "Signed reciept ",
  "type": "object",
  "allOf": [
    { "$ref": "ExecutionCondition.json" }
  ],
  "properties": {
    "message": {
      "description": "Transfer state",
      "type": "object",
      "properties": {
        "id": {
          "description": "Transfer ID",
          "$ref": "Iri.json"
        },
        "state": {
          "description": "Transfer state",
          "$ref": "TransferState.json"
        }
      }
    },
    "signature": {
      "description": "Base64-encoded signature in the signature scheme and by the public key specified by the corresponding ExecutionCondition",
      "$ref": "Base64.json"
    }
  },
  "required": ["message", "signature"],
  "additionalProperties": false
}
