      "required": ["type", "message"],
      "additionalProperties": false
    },
    "Ed25519_Sha512": {
      "type": "object",
      "properties": {
        "type": {
          "enum": ["ed25519-sha512"]
        },
        "signature": {
          "$ref": "Base64.json"
        }
      },
      "required": ["type", "signature"],
      "additionalProperties": false
    }
  },
  "oneOf": [
    { "$ref": "#/definitions/HashSha256Fulfillment" },
    { "$ref": "#/definitions/Ed25519_Sha512" }
