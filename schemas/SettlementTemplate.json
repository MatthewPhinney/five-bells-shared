{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "SettlementTemplate",
  "description": "A template for a cross-ledger transfer that can have some settlement fields missing",
  "type": "object",
  "properties": {
    "id": {
      "description": "Unique ID",
      "$ref": "Iri.json"
    },
    "source_transfer": {
      "description": "Transfer on the source ledger",
      "$ref": "TransferTemplate.json"
    },
    "destination_transfer": {
      "description": "Transfer on the destination ledger",
      "$ref": "TransferTemplate.json"
    }
  }
}
