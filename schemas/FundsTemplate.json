{
  "$schema": "http://json-schema.org/draft-04/schema",
  "title": "Funds",
  "description": "A defined quantity of an asset optionally located on a specified ledger.",
  "type": "object",
  "properties": {
    "account": {
      "description": "Account holding the funds",
      "$ref": "Identifier.json"
    },
    "amount": {
      "description": "Amount as decimal",
      "$ref": "Amount.json"
    },
    "authorization": {
      "description": "Authorization to deliver these funds",
      "oneOf": [
        { "$ref": "CreditAuthorization.json" },
        { "$ref": "DebitAuthorization.json" }
      ]
      
    }
  },
  "required": ["account", "amount"],
  "additionalProperties": false
}
